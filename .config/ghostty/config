font-family = JetBrainsMono Nerd Font
theme = catppuccin-mocha
bold-is-bright = true
copy-on-select = true
window-decoration = false
gtk-tabs-location = hidden
adjust-underline-position = 4

# Keybinds
keybind = alt+ctrl+c=reload_config

# tabs
keybind = alt+ctrl+t>t=new_tab
keybind = alt+ctrl+t>p=previous_tab
keybind = alt+ctrl+t>n=next_tab

# splits
keybind = alt+ctrl+v=new_split:right
keybind = alt+ctrl+h=new_split:down
keybind = unconsumed:ctrl+h=goto_split:left
keybind = unconsumed:ctrl+j=goto_split:bottom
keybind = unconsumed:ctrl+k=goto_split:top
keybind = unconsumed:ctrl+l=goto_split:right
keybind = unconsumed:ctrl+left=goto_split:left
keybind = unconsumed:ctrl+down=goto_split:bottom
keybind = unconsumed:ctrl+up=goto_split:top
keybind = unconsumed:ctrl+right=goto_split:right
keybind = alt+ctrl+m=toggle_split_zoom

keybind = unconsumed:alt+h=resize_split:left,10
keybind = unconsumed:alt+j=resize_split:down,10
keybind = unconsumed:alt+k=resize_split:up,10
keybind = unconsumed:alt+l=resize_split:right,10


